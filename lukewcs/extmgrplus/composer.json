{
    "name": "lukewcs/extmgrplus",
    "type": "phpbb-extension",
    "description": "Adds the ability to disable and re-enable all installed extensions at once to extension management. An individual selection can be made using checkboxes. In addition, order groups and dependencies can be defined or extensions can be ignored. Additional information is also displayed in the extension management.",
    "homepage": "https://github.com/LukeWCS/ext-mgr-plus",
    "version": "2.1.0-b4",
    "time": "2024-09-23",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "LukeWCS",
            "homepage": "https://github.com/LukeWCS",
            "role": "Developer (EMP)"
        },
        {
            "name": "Christian Esch aka Chris1278",
            "homepage": "https://christian-esch.de",
            "role": "Developer (ExtOnOff)"
        }
    ],
    "require": {
        "php": ">=7.1.3,<8.4.0@dev",
        "composer/installers": "~1.0.0"
    },
    "extra": {
        "display-name": "Extension Manager Plus",
        "lang-min-ver": "2.1.0",
        "soft-require": {
            "phpbb/phpbb": ">=3.3.0,<3.4.0@dev"
        },
        "version-check": {
            "host": "www.phpbb.com",
            "directory": "/customise/db/extension/extension_manager_plus",
            "filename": "version_check",
            "ssl": true
        }
    }
}
